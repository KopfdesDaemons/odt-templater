{
  "name": "odt-templater",
  "version": "1.0.0",
  "description": "A simple templating engine for OpenDocument Text (.odt) files.",
  "main": "dist/cjs/index.cjs",
  "license": "MIT",
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    "import": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "require": {
      "types": "./dist/cjs/index.d.ts",
      "default": "./dist/cjs/index.cjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:cjs": "tsc --project tsconfig.cjs.json && mv dist/cjs/index.js dist/cjs/index.cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KopfdesDaemons/odt-templater.git"
  },
  "keywords": [
    "odt",
    "templater",
    "templates",
    "generation",
    "generator"
  ],
  "author": "KopfdesDaemons",
  "homepage": "https://odt-templater.com/",
  "bugs": {
    "url": "https://github.com/KopfdesDaemons/odt-templater/issues"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "typescript": "^5.5.3"
  }
}
